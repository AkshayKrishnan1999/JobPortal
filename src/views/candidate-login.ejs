<main class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <h1 class="text-center mb-4">Candidate Login</h1>
        <%if(errorMessage){ %>
          <div class="alert alert-danger" role="alert">
              <%= errorMessage %>
          </div>
          <%}%>
        <form action="/candidate-login" method="POST" class="p-4 rounded-lg shadow-sm bg-light">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password">
          </div>
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
   
   
        <div class="text-center mt-3">
          Don't have an account? <a href="/candidate-register">Register now</a>
        </div>
      </div>
    </div>
   </main>
   