<!-- views/update-job.ejs -->

<h1 class="mt-5 mb-4 header">Update Job</h1>

<% if(errorMessage) { %>
<div class="alert alert-danger" role="alert">
    <%= errorMessage %>
</div>
<% } %>

<form action="/update-job" method="post" enctype="multipart/form-data">
    <input type="hidden" class="form-control" id="id" name="id" value="<%= job.id %>">
    
    <div class="mb-3">
        <label for="name" class="form-label">Job Title</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= job.name %>">
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Job Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3" required><%= job.desc %></textarea>
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" name="salary" value="<%= job.salary %>" step="0.01">
    </div>
    <div class="mb-3">
        <label for="resume" class="form-label">Upload Updated Resume</label>
        <input type="file" name="resume" id="resume" accept=".pdf, .doc, .docx" />
    </div>
    <button type="submit" class="btn btn-primary">Update Job</button>
</form>
